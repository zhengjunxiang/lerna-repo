{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "run": {
      "stream": true
    },
    "publish": {
      "npmClient": "npm",
      "ignoreChanges": [
        "**/*.md",
        "**/test/**"
      ],
      "forcePublish": true,
      "skipGit": true,
      "registry": "http://r.npm.sankuai.com",
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    },
    "version": {
      "message": "chore(version): change version %s"
    }
  },
  "version": "1.1.0"
}
